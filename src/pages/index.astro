---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

import { getCourses } from "../services/courses";
import rawId2Name from "../../migration/json/valores_unicos.json";

const id2name: Record<string, string> = rawId2Name as Record<string, string>;
const courses = await getCollection("coursesScore");
---

<Layout>
	{JSON.stringify(courses)}
	<div class="max-w-7xl mx-auto px-4 py-8">
		<!-- Header -->
		<div class="mb-8">
			<h1 class="text-4xl font-bold text-gray-900 mb-2">
				Resumen de Cursos
			</h1>
			<p class="text-gray-600">
				Explora todos los cursos disponibles con sus estadísticas de la
				comunidad
			</p>
		</div>

		<!-- Grid de cursos -->

		<!-- Información adicional -->
		<div class="mt-12 bg-gray-50 rounded-lg p-6">
			<h2 class="text-xl font-bold text-gray-900 mb-3">
				¿Cómo interpretar las estadísticas?
			</h2>
			<div class="grid md:grid-cols-3 gap-4 text-sm text-gray-700">
				<div>
					<h3 class="font-semibold mb-2">Valoraciones</h3>
					<p>❤️ Superlikes: Cursos altamente recomendados</p>
					<p>👍 Likes: Cursos bien valorados</p>
					<p>👎 Dislikes: Cursos con aspectos a mejorar</p>
				</div>
				<div>
					<h3 class="font-semibold mb-2">Carga de Trabajo</h3>
					<p>
						<span class="text-green-600">Baja:</span> Menos demandante
					</p>
					<p>
						<span class="text-yellow-600">Media:</span> Carga equilibrada
					</p>
					<p>
						<span class="text-red-600">Alta:</span> Muy demandante
					</p>
				</div>
				<div>
					<h3 class="font-semibold mb-2">Horas Semanales</h3>
					<p>
						Promedio de horas de estudio y trabajo que requiere el
						curso según la comunidad estudiantil.
					</p>
				</div>
			</div>
		</div>
	</div>
</Layout>
